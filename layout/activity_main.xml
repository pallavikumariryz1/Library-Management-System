<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:visibility="visible"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/display"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:background="@color/black_700"
        android:gravity="right"
        android:text="0"
        android:textColor="color"
        android:textSize="64dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@color/purple_200"
        android:orientation="horizontal"
        tools:ignore="ExtraText">

        <Button
            android:id="@+id/buttonSeven"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="5dp"
            android:layout_weight="1"
            android:onClick="digitButton"
            android:backgroundTint="@color/black"
            android:text="7"
            android:textColor="@color/purple_500"
            android:textSize="50dp"
            tools:targetApi="lollipop" />


        <Button
            android:id="@+id/buttonEight"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="5dp"
            android:layout_weight="1"
            android:onClick="digitButton"
            android:backgroundTint="@color/black"
            android:text="8"
            android:textColor="@color/purple_500"
            android:textSize="50dp"
            tools:targetApi="lollipop" />


        <Button
            android:id="@+id/buttonNine"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="5dp"
            android:layout_weight="1"
            android:onClick="digitButton"
            android:backgroundTint="@color/black"
            android:text="9"
            android:textColor="@color/purple_500"
            android:textSize="50dp"
            tools:targetApi="lollipop" />

        <Button
            android:id="@+id/buttonDivide"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="5dp"
            android:layout_weight="1"
            android:onClick="functionButton"
            android:backgroundTint="@color/black"
            android:background="@color/purple_200"
            android:text="/"
            android:textColor="@color/purple_500"
            android:textSize="50dp"
            tools:targetApi="lollipop" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@color/purple_200"
        android:orientation="horizontal"
        tools:ignore="ExtraText">

        <Button
            android:id="@+id/buttonFour"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="5dp"
            android:layout_weight="1"
            android:onClick="digitButton"
            android:backgroundTint="@color/black"
            android:text="4"
            android:textColor="@color/purple_500"
            android:textSize="50dp"
            tools:targetApi="lollipop" />


        <Button
            android:id="@+id/buttonFive"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="5dp"
            android:layout_weight="1"
            android:onClick="digitButton"
            android:backgroundTint="@color/black"
            android:text="5"
            android:textColor="@color/purple_500"
            android:textSize="50dp"
            tools:targetApi="lollipop" />


        <Button
            android:id="@+id/buttonSix"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="5dp"
            android:layout_weight="1"
            android:onClick="digitButton"
            android:backgroundTint="@color/black"
            android:text="6"
            android:textColor="@color/purple_500"
            android:textSize="50dp"
            tools:targetApi="lollipop" />

        <Button
            android:id="@+id/buttonMultiply"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="5dp"
            android:layout_weight="1"
            android:onClick="functionButton"
            android:backgroundTint="@color/black"
            android:background="@color/purple_200"
            android:text="*"
            android:textColor="@color/purple_500"
            android:textSize="50dp"
            tools:targetApi="lollipop" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@color/purple_200"
        android:orientation="horizontal"
        tools:ignore="ExtraText">

        <Button
            android:id="@+id/buttonOne"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="5dp"
            android:layout_weight="1"
            android:onClick="digitButton"
            android:backgroundTint="@color/black"
            android:orientation="horizontal"
            android:text="1"
            android:textColor="@color/purple_500"
            android:textSize="50dp"
            tools:targetApi="lollipop" />


        <Button
            android:id="@+id/buttonTwo"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="5dp"
            android:layout_weight="1"
            android:onClick="digitButton"
            android:backgroundTint="@color/black"
            android:orientation="horizontal"
            android:text="2"
            android:textColor="@color/purple_500"
            android:textSize="50dp"
            tools:targetApi="lollipop" />


        <Button
            android:id="@+id/buttonThree"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="5dp"
            android:layout_weight="1"
            android:onClick="digitButton"
            android:backgroundTint="@color/black"
            android:orientation="horizontal"
            android:text="3"
            android:textColor="@color/purple_500"
            android:textSize="50dp"
            tools:targetApi="lollipop" />


        <Button
            android:id="@+id/buttonSub"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="5dp"
            android:layout_weight="1"
            android:onClick="functionButton"
            android:backgroundTint="@color/black"
            android:background="@color/purple_200"
            android:orientation="horizontal"
            android:text="-"
            android:textColor="@color/purple_500"
            android:textSize="42dp"
            tools:targetApi="lollipop" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@color/purple_200"
        android:orientation="horizontal"
        tools:ignore="ExtraText">

        <Button
            android:id="@+id/buttontZero"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="5dp"
            android:layout_weight="1"
            android:onClick="digitButton"
            android:backgroundTint="@color/black"
            android:text="0"
            android:textColor="@color/purple_500"
            android:textSize="50dp"
            tools:targetApi="lollipop" />

        <Button
            android:id="@+id/buttonDot"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="5dp"
            android:layout_weight="1"
            android:backgroundTint="@color/black"
            android:onClick="dotButton"
            android:text="."
            android:textColor="@color/purple_500"
            android:textSize="50dp"
            tools:targetApi="lollipop" />

        <Button
            android:id="@+id/ClrButton"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="5dp"
            android:layout_weight="1"
            android:text="clr"
            android:textColor="@color/purple_500"
            android:textSize="25dp"
            android:background="@drawable/button_sql_circle_shape"
            app:backgroundTint="@color/buttonFunctionBackground" />

        <Button
            android:id="@+id/buttonPlus"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="5dp"
            android:layout_weight="1"
            android:onClick="functionButton"
            android:backgroundTint="@color/black"
            android:text="+"
            android:textSize="50dp"
            android:background="@color/purple_200"
            android:textColor="@color/purple_500"
            tools:targetApi="lollipop" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@color/purple_200"
        android:orientation="horizontal"
        tools:ignore="ExtraText">

        <Button
            android:id="@+id/buttont1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="5dp"
            android:layout_weight="1"
            android:onClick="onEqual"
            android:orientation="horizontal"
            android:text="="
            android:textSize="50dp"
            android:background="@drawable/button_sql_circle_shape"
            android:textColor="@color/design_default_color_on_secondary"
            app:backgroundTint="@color/buttonFunctionBackground"
             />
    </LinearLayout>
</LinearLayout>

